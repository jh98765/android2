<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#ffffff" android:endColor="#ECECEC"
                android:angle="270" />

            <stroke
                android:width="0.5dip" android:color="#555555"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#BDBDBD" android:endColor="#DADADA"
                android:angle="270" />

            <stroke
                android:width="0.5dip" android:color="#555555"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#A3A3A3" android:endColor="#C0C0C0"
                android:angle="270" />

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#F5F5F5" android:endColor="#F5F5F5"
                android:angle="270" />

            <stroke
                android:width="0.2dip" android:color="#CECECE"/>

            <corners android:radius="5dip"/>


            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
</selector>